{
    "manifest_version": 2,
    "name": "YouTubeTall",
    "version": "1.0",
    "content_scripts": [
        {
            "matches": [
                "https://www.youtube.com/feed/subscriptions*"
            ],
            "js": [
                "content.js"
            ]
        }
    ],
    "browser_action": {
        "browser_style": true,
        "default_icon": "YouTubeTall.png",
        "default_popup": "/popup.html",
        "default_title": "YouTubeTall"
    },
    "browser_specific_settings": {
        "gecko": {
            "id": "addon@example.com",
            "strict_min_version": "42.0"
        }
    },
    "host_permissions": [
        "https://www.youtube.com/feed/subscriptions"

    ],
    "permissions": [
        "storage",
        "unlimitedStorage"
    ]
}